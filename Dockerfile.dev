# Etapa 1: Builder
FROM python:3.11-alpine3.19 AS builder

WORKDIR /app

COPY requirements.txt .

# Actualiza pip e instala dependencias
RUN pip install --upgrade pip && \
  pip install -r requirements.txt --no-cache-dir

COPY yana/. yana/

# Ajusta permisos para el usuario no root (UID 65534, GID 65534)
RUN chown -R 65534:65534 /app

# Etapa 2: Imagen final
FROM gcr.io/distroless/python3

WORKDIR /app

# Copia las dependencias instaladas desde la etapa builder
COPY --from=builder /usr/local/lib/python3.11/site-packages/ /usr/lib/python3/dist-packages/
COPY --from=builder --chown=65534:65534 /app/yana /app

# Configura variables de entorno
ENV PYTHONUNBUFFERED=1 \
  PORT=8000

# Ejecuta como usuario no privilegiado (nonroot)
USER 65534:65534

# CMD usa el ENTRYPOINT impl√≠cito de python en distroless
CMD ["manage.py", "runserver", "0.0.0.0:8000"]